<Window x:Class="SealSignBSSClientTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SealSignBSSClientTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" VerticalAlignment="Center">
            <Button Width="150" Margin="5" Click="OnSignatureSampleClick">Signature</Button>
            <Button Width="150" Margin="5" Click="OnSignatureOfflineSampleClick">Offline Signature</Button>
            <Button Width="150" Margin="5" Click="OnSignatureWithProviderSampleClick">Signature with provider</Button>
            <Button Width="150" Margin="5" Click="OnSignatureAuthSampleClick">Signature Auth</Button>
        </StackPanel>
        <ContentControl Name="SampleContent" Grid.Column="1" />
    </Grid>
</Window>
