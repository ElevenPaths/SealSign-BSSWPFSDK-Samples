<local:SampleBase x:Class="SealSignBSSClientTest.Samples.SignatureSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SealSignBSSClientTest.Samples"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Name="RootGrid" Background="Red">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <Button Name="botonBorrar" Width="100" Margin="5" Click="OnBorrarClick">Borrar</Button>
            <Button Name="botonFirmar" Width="100" Margin="5" Click="OnFirmarClick">Firmar</Button>
            <Button Name="botonFondo" Width="100" Margin="5" Click="OnFondoClick">Fondo</Button>
            <Button Name="botonBotones" Width="100" Margin="5" Click="OnBotonesClick">Botones</Button>
        </StackPanel>
    </Grid>
</local:SampleBase>
